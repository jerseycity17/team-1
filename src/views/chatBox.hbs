    <main role="main">

      <!-- Marketing messaging and featurettes
      ================================================== -->
      <!-- Wrap the rest of the page in another container to center all the content. -->
        <div>
        <br>
        <br>
            
            <div style="float:right; font-size: 19px;padding: 20px; ">
            <button stlye ="float:right "type="button" ><a href="/familyProfile?family={{name}}"> {{name}} </a>Profile</button>
            </div>
            <br>
               <h1 style= "padding-left: 28px ">{{name}}</h1>  
            </div>
  
 
        <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th style="text-align: center; font-size: 22px">{{body.phone}}</th>
                </tr>
              </thead>
            </table>
            
            {{#each messages}}
            {{#if this.[1]}}
            <div style="
    background: #e6f2ff;
    min-width: 50px;
    padding-top: 10px;
    padding-left: 20px;
    border-radius: 2px;
    box-shadow: 0px 2px 0px rgba(0, 0, 0, 0.07);">
            <p>{{this.[0]}}</p>
            <p style = "font-style: italic;font-size: 13px">Sent {{this.[2]}}</p>
            </div>
            <br>
            {{else}}
            <div style="
    text-align: right;
    background: #e0e0eb;
    min-width: 50px;
    padding-top: 10px;
    padding-right: 20px;
    border-radius: 2px;
    box-shadow: 0px 2px 0px rgba(0, 0, 0, 0.07);">
            <p>{{this.[0]}}</p>
            <p style = "font-style: italic;font-size: 13px">Sent {{this.[2]}}</p>
            </div>
            {{/if}}
            {{/each}}

     <div style="display: flex;
                        align-items: center;
                        justify-content: center;
                 padding-bottom: 20px">
      <form method="POST">
        <input type="text" name="messageText" placeholder="Type your message here" size="60" />
        <input type="submit" value="Send" />
    </form>
      </div>
        
        
      
    </main>


